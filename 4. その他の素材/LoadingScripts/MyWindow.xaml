<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ローディング画面" Height="200" Width="250"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize"
        Top="0" Left="0">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 上段（小さめテキスト） -->
        <TextBlock Grid.Row="0"
                   Text="弔事自動化ロボ、動作中。"
                   FontSize="14"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,5,0,5"/>

        <!-- 下段（画像とボタン） -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,5,0,5">
            <Image x:Name="loadingImage"
                   Width="60" Height="60"
                   Margin="0,0,0,5"/>
            <Button x:Name="btnStop"
                    Content="ロボ停止"
                    Width="100" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
